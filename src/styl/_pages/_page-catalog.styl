.sorting
	min-width 150px
	text-align center
	position relative
	cursor pointer
	&:hover
		.sorting
			&__dropdown
				margin-top 0
				opacity 1
				visibility visible
				pointer-events auto
			&__text
				&:after
					transform translateY(-50%) rotate(-180deg)
	&__text
		font 18px $Bold
		display block
		color $dark-secondary-color
		padding-right 20px
		line-height 1
		span
			display block
			line-height 1
		&:after
			pseudo()
			position absolute
			right 0
			vertical-center()
			transition transform .17s ease-in-out
			background url('../img/icons/svg/catalog_sort by_arrow.svg') 50% 50% no-repeat
			width 12px
			height 7px
	&__wrapper
		display flex
		align-items center
	&__label
		font-size 18px
		display inline-block
		line-height 1
		margin-right 20px
	
	&__dropdown
		position absolute
		z-index 5
		top 100%
		horisontal-center()
		padding-top 10px
		transition all .17s ease-in-out
		margin-top 15px
		opacity 0
		visibility hidden
		pointer-events none
		&--list
			min-width 180px
			border-radius 5px
			background-color $light-color
			box-shadow 0px 8px 36px 0px rgba(0, 0, 0, 0.1)
		&--item
			display block
			text-align center
			padding 15px
			font 18px $Bold
			color $dark-secondary-color
			opacity .8
			transition opacity .17s ease-in-out
			cursor pointer
			&:hover,
			&.is-active
				opacity 1
				

.catalog
	display flex
	align-items flex-start
	&__header
		margin-bottom 65px
		
		.sect__title
			margin-bottom 0
			margin-right 15px
			
	&__products
		width 75%
		padding-left 30px
		
		&--row
			border 1px solid $border-color
		
			border-radius 5px
			

.product-card
	position relative
	width 25%
	border-right 1px solid $border-color
	border-top 1px solid $border-color
	&:nth-child(4n)
		border-right none
	&:hover
		.product-card__hover
			opacity 1
	&__content
		position relative
		z-index 2
		height 100%
		display flex
		flex-direction column
		&--body
			padding 20px 20px 30px 20px
			text-align center
			display flex
			flex-direction column
			flex 1
			
	&__title
		font-size 16px
		margin-bottom 25px
		flex 1
		a
			display inline-block
			color $text-color
			line-height 1.3
			
			&:hover
				color $accent-color
			
	&__price
		font 20px $Bold
		color $dark-secondary-color
	&__hover
		position absolute
		top -1px
		left -1px
		right -1px
		bottom -1px
		background-color $light-color
		box-shadow 0px 8px 36px 0px rgba(0, 0, 0, 0.1)
		opacity 0
		transition opacity .17s ease-in-out
		
	
	&__thumbnail
		flex-col-center()
		width 100%
		padding 50px 10px 10px 10px
		height 300px
		backface-visibility hidden
		img
			@extends .content-img
			transition transform .17s ease-in-out
			will-change transform
			
	&__label
		position absolute
		horisontal-center()
		z-index 2
		top 25px
		text-transform uppercase
		font 12px $Bold
		color $secondary-color
			
	&__tools
		margin-top 25px

		
		.product__quantity
			margin 0 auto 15px auto
			
	&.is-stock
		.product-card
			&__label,
			&__price
				color $stock-color
				

.load-more
	margin-top 35px
				

			
