.page-form
	&__link
		margin-top 60px
		
.equipment-selection
	&__form
		max-width 1000px
		margin 0 auto
		
	&__block
		background-color #f7f9fc
		padding 22.5px 45px
		margin-bottom 55px
		
	&__row
		margin-left -22.5px
		margin-right -22.5px
		
	&__col
		width 33.3333%
		padding 22.5px
		text-align left
		
		&--title
			font 20px $Bold
			color $accent-color
			margin-bottom 20px
			
	&__checkboxes
		display flex
		flex-direction column
		align-items flex-start
		
		.checkbox__label,
		.radio__label
			margin-bottom 15px
			&:last-child
				margin-bottom 0
				
	&__files
		margin 25px auto 0 auto
		width 100%
		max-width 810px
		&--col
			width 50%
			padding 0 15px