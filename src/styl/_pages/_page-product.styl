.product
	&__quantity
		position relative
		width 140px
		height 40px
		
		&--input
			display block
			width 100%
			height 40px
			line-height 40px
			text-align center
			font 18px $Bold
			color $dark-secondary-color
			-moz-appearance textfield
			padding-left 45px
			padding-right 45px
			&::-webkit-outer-spin-button
			&::-webkit-inner-spin-button 
				appearance none
				-webkit-appearance none
				margin 0
	&__price
		font 36px $Bold
		margin-bottom 25px
		color $dark-secondary-color
	&__tools
		margin-bottom 25px
		.product__quantity
			margin-right 25px
			
	&__notice
		margin-bottom 25px
		
	&__information
		color $light-text-color
		margin-bottom 25px
		
	&__characteristics
		font-size 18px
		color $light-text-color
		&--title
			font 24px $Bold
			color $dark-secondary-color
			margin-bottom 25px
		
		ul
			margin-bottom 25px
			&:last-child
				margin-bottom 0

		
	&__content
		width 50%
		padding-left 70px
		
	&__brand
		position absolute
		top 15px
		left 15px
		z-index 2
		img
			display block
			max-width 100px
	

	&__gallery
		position absolute
		bottom 15px
		right 15px
		z-index 2


.tab__controls
	margin-bottom 60px
	text-align center
	font-size 0
	
	.btn__tab
		&:first-child
			border-top-left-radius 100px
			border-bottom-left-radius 100px
		&:nth-child(2)
			border-left none
			border-right none
		&:last-child
			border-top-right-radius 100px
			border-bottom-right-radius 100px
