.pagination
	margin-top 35px
	&__list
		display flex
		justify-content center
		white-space nowrap
	&__item
		display inline-block
		margin-right 6px
		&:last-child
			margin-right 0
			
	&__link
		flex-col-center()
		text-align center
		width 40px
		height 40px
		border-radius 50%
		font 16px $Bold
		color $accent-color
		background-color $pagination-link-bg
		&:hover
			background-color $accent-color
			color $light-color
			
		&--arrow
			background-color transparent
			border 2px solid $accent-color
			position relative
			&_ic
				display block
				width 12px
				height 16px
				position absolute
				position-center()
			svg
				svg()
				fill $accent-color
			&:hover
				svg
					fill $light-color
			