.nav
	background-color $accent-color
	&__list
		display flex
		justify-content space-between
		position relative
	&__item
		flex 1 0 auto
		&.has-sublist
			.nav__link
				span
					padding-right 20px
					&:after
						pseudo()
						position absolute
						right 0
						top 50%
						transform translateY(-50%)
						transition transform .17s ease-in-out
						width 10px
						height 6px
						background url('../img/icons/svg/header_menu_arrow.svg') 50% 50% no-repeat / 10px 6px
						
			&:hover
				.nav__link
					background-color $light-accent-color
					span
						&:after
							transform translateY(-50%) rotate(-180deg)
							
				.sublist
					opacity 1
					visibility visible
					pointer-events auto
					margin-top 0
					
	&__link
		display block
		font 12px $Bold
		color $light-color
		@extends .letter-spacing
		text-align center
		text-transform uppercase
		padding 30px 10%
		&:hover
			background-color $light-accent-color

		span
			display inline-block
			position relative
			
		&--catalog
			span
				padding-left 40px
				&:before
					pseudo()
					position absolute
					vertical-center()
					left 0
					background url('../img/icons/svg/header_menu_burger.svg') 50% 50% no-repeat / 20px 14px
					width 20px
					height 14px
			

.sublist
	position absolute
	top 100%
	margin-top -1px
	left 0
	width 100%
	z-index 5
	background-color $light-color
	box-shadow 0px 8px 36px 0px rgba(0, 0, 0, 0.1)
	transition all .17s ease-in-out
	opacity 0
	visibility hidden
	margin-top -20px
	pointer-events none
	
	display flex
	flex-wrap wrap
	justify-content flex-start
	
	padding 30px 70px
	
	&__col
		width 25%
		padding 20px 30px
		&.width-20
			width 20%
		
		&--block
			margin-bottom 25px
			p
				color rgba($light-text-color, .8)
				line-height 1.9
			&:last-child
				margin-bottom 0
			&_title
				font 18px $Bold
				color $dark-secondary-color
				margin-bottom 25px
				a
					color inherit
					border-bottom 1px solid transparent
					&:hover
						color $secondary-color
						border-color inherit
				
	&__list
		li
			margin-bottom 10px
			&:last-child
				margin-bottom 0
				
		a
			color $light-text-color
			border-bottom 1px solid transparent
			&:hover
				color $secondary-color
				border-color inherit
				

.footer__nav
	ul
		li
			margin-bottom 20px
			&:last-child
				margin-bottom 0
				
		a
			color rgba($light-color, .6)
			font-size 18px
			&:hover
				color rgba($light-color, 1)