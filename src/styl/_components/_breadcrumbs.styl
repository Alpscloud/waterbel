.breadcrumbs
	margin-bottom 50px
	&__item
		display inline-block
		margin-right 15px
		position relative
		&:after
			pseudo()
			position absolute
			vertical-center()
			left 100%
			margin-left 7px
			width 4px
			height 8px
			background url('../img/icons/svg/breadcrumb-arrow.svg') 50% 50% no-repeat
		&:last-child
			margin-right 0
			&:after
				display none
	&__link
		display block
		color rgba($dark-secondary-color, .6)
		line-height 1
		&.is-active,
		&:hover
			color $secondary-color