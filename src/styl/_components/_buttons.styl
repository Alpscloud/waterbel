.btn
	display inline-block
	text-align center
	border-radius 100px
	font 12px $Bold
	outline none
	transition all .17s ease-in-out
	line-height 1
	color $accent-color
	text-transform uppercase
	@extends .letter-spacing
	border 2px solid transparent
	padding 22px 30px
	
	&:hover
		background-color $dark-accent-color
		
	&-accent
		background-color $accent-color
		color $light-color
		&:hover
			color $light-color
			background-color $secondary-color
			
	&-light
		background-color $light-color
		color $accent-color
		&:hover
			background-color $accent-color
			color $light-color
	
	&-shadow
		background-color transparent
		border-color $accent-color
		&:hover
			background-color $accent-color
			color $light-color
			
	&-wide
		width 100%
		padding-left 15px
		padding-right 15px
		
	&-hover-dark
		&:hover
			color $light-color
			background-color $secondary-color
		
			
	&__close
		display inline-block
		width 14px
		height 14px
		position absolute
		top 10px
		right 10px
		opacity .3
		&:hover
			opacity 1
		&--ic
			display block
			width 100%
			height 100%
		svg
			svg()
			fill #162648
		
		
	&__search
		display inline-block
		position absolute
		vertical-center()
		right 12px
		z-index 1
		width 20px
		height 20px
		&--ic
			display block
			width 100%
			height 100%
		svg
			svg()
			fill $secondary-color
		&:hover
			svg
				fill $accent-color
		&::-ms-clear
			display none 
			width 0
			height 0
		&::-ms-reveal
			display none 
			width 0
			height 0
		
		&::-webkit-search-decoration,
		&::-webkit-search-cancel-button,
		&::-webkit-search-results-button,
		&::-webkit-search-results-decoration
			display none
			
	&__callback
		display flex
		align-items center
		justify-content center
		padding 13px 25px
		border 2px solid $secondary-color
		text-transform uppercase
		font 12px $Bold
		color $secondary-color
		&--ic
			display block
			width 16px
			height 16px
			flex none
			margin-right 15px
			svg
				svg()
				fill $secondary-color
		&:hover
			background-color $secondary-color
			color $light-color
			svg
				fill $light-color
				
	&__with-logo
		display inline-block
		position relative
		border-radius 70px
		background-color $accent-color
		color $light-color
		padding 22.5px 85px 22.5px 25px
		text-transform uppercase
		font 12px $Bold
		will-change transform
		backface-visibility hidden
		&_logo
			position absolute
			right 0
			vertical-center()
			border-radius 50%
			background-color $dark-accent-color
			flex-col-center()
			padding 5px
			width 60px
			height 60px
			transition background-color .17s ease-in-out
			img
				@extends .content-img
				max-width 30px
				max-height 30px
				transition transform .17s ease-in-out
		&:hover
			background-color $dark-accent-color
			.btn__with-logo_logo
				background-color $accent-color
			img
				transform rotate(-15deg)
	

	&__top
		display none
		border-radius 10px
		width 50px
		height 50px
		position fixed
		right 20px
		bottom 20px
		background $accent-color url('../img/icons/svg/up-arrow.svg') 50% 50% no-repeat / 14px 14px
		z-index 10
		text-align center
		transition all .17s ease-in-out
		opacity .65
		&:hover
			opacity 1
		
		

	&__hamburger
		display inline-block
		flex none
		width 50px
		height 50px
		border-radius 50%
		background-color $accent-color
		position relative
		transition background-color .17s ease-in-out
		margin-left 15px
		&--line
			width 27px
			height 2px
			background-color $dark-color
			display block
			margin 6px auto
			transition all 0.3s ease-in-out	
		&.is-active
			.btn__hamburger--line
				&:nth-child(1)
					transform translateY(8px) rotate(45deg)
				&:nth-child(2)
					opacity 0	
				&:nth-child(3)
					transform translateY(-8px) rotate(-45deg)
		