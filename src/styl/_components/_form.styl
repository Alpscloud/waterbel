input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)
	
.search
	&__wrapper
		flex none
		width 260px
		
	&-input
		display block
		width 100%
		border 1px solid transparent
		color $dark-color
		font 14px $Reg
		padding 12px 45px 12px 12px
		background-color $search-input-bg
		&::-webkit-input-placeholder
			font 14px $Reg
			color $text-color
		&::-moz-placeholder
			font 14px $Reg
			color $text-color
		&:-moz-placeholder
			font 14px $Reg
			color $text-color
		&:-ms-input-placeholder
			font 14px $Reg
			color $text-color
		&:hover,
		&:focus
			border-color $accent-color
		&__wrapper
			position relative
	
.input
	display block
	width 100%
	padding 20px
	text-align center
	background-color $input-bg
	border 2px solid $accent-color
	font 14px $Reg
	color #000
	border-radius 100px
	&:hover,
	&:focus
		border-color $secondary-color
	&::-webkit-input-placeholder
		font 14px $Reg
		color rgba($dark-secondary-color, .75)
	&::-moz-placeholder
		font 14px $Reg
		color rgba($dark-secondary-color, .75)
	&:-moz-placeholder
		font 14px $Reg
		color rgba($dark-secondary-color, .75)
	&:-ms-input-placeholder
		font 14px $Reg
		color rgba($dark-secondary-color, .75)
		
	&__wrapper
		margin-bottom 20px
		position relative
		&:last-child
			margin-bottom 0
		
	&.is-error
		border-color red
		
	&-light
		color $light-color
		border-color #9bb7d3
		background-color #125397
		&:hover
			border-color $accent-color
		&::-webkit-input-placeholder
			font 14px $Reg
			color $light-color
		&::-moz-placeholder
			font 14px $Reg
			color $light-color
		&:-moz-placeholder
			font 14px $Reg
			color $light-color
		&:-ms-input-placeholder
			font 14px $Reg
			color $light-color
	


.checkbox,
.radio
	position relative
	display inline-block
	margin-left 0
	padding-left 25px
	font 1em $Reg
	line-height 1
	color $text-color
	&:before,
	&:after
		pseudo()
		transition all .25s ease-in-out
		position absolute
		left 0
		vertical-center()
			
	&__label
		cursor pointer
		display inline-block
		input
			display none

.checkbox
	&:before
		border-radius 4px
		width 18px
		height 18px
		border 1px solid $accent-color
		background-color transparent
	&:after
		width 12px
		height 12px
		background url('../img/icons/svg/checkbox-ic.svg') 50% 50% no-repeat
		background-size 12px 12px
		position absolute
		left 3px
		top 8px
		opacity 0
	&__label
		input
			&:checked 
				+ span
					&:before
						border-color $dark-color
						background-color $dark-color
					&:after
						opacity 1
			
.radio
	&:before
	&:after
		border-radius 50%
	&:before
		width 18px
		height 18px
		border 1px solid $accent-color
		background-color $transparent
	&:after
		width 12px
		height 12px
		background-color $light-color
		left 3px
		top 8px
		opacity 0
		
	&__label
		input
			&:checked 
				+ span
					&:before
						border-color $dark-color
						background-color $dark-color
					&:after
						opacity 1

		