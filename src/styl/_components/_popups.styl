.popup 
	position fixed
	position-center()
	z-index 90
	width 100%
	height 100%
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
		padding 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__title
		text-align center
		font 20px $ExBold
		color $dark-secondary-color
		margin-bottom 30px
	&__body
		width 100%
		max-width 320px
		background-color $popup-body-bg
		padding 45px
		display inline-block
		vertical-align middle
		position relative
		white-space normal
		box-shadow 0px 5px 40px 0px rgba(0, 0, 0, 0.15)
		
	.btn__close
		position absolute
		top 10px
		right 10px

