.slider
	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
			
	&__pagination
		.swiper-pagination-bullet
			width 10px
			height 10px
			border-radius 50%
			border 2px solid $secondary-color
			background-color transparent
			transition all .17s ease-in-out
			opacity 1
			outline none
			margin-right 10px
			&:last-child
				margin-right 0
			&:hover,
			&-active
				background-color $secondary-color
		&--accent
			.swiper-pagination-bullet
				border-color $accent-color
				&:hover,
				&-active
					background-color $accent-color

.swiper-container
	*
		box-sizing border-box			
// Promo
.promo
	
	&-slide
		position relative
		&__bg
			padding-top 40%
		&__content
			position absolute
			position-center()
			width 100%
			z-index 1
			&--block
				max-width 50%
		&__title
			font 56px $Bold
			color $dark-secondary-color

		&__text
			font-size 24px
			color $light-text-color
			margin-top 50px
			b, strong
				font-family $Med
				
		&__price
			color $accent-color
			margin-top 40px
			font 40px $Bold
			
		.btn__with-logo
			margin-top 60px
			
	&__slider
		position relative
		&--pagination
			position absolute
			position-center()
			z-index 2
			pointer-events none
			display flex
			flex-direction column
			align-items flex-end
			span
				pointer-events auto
				
			.swiper-pagination-bullet
				width 14px
				height 14px
				border-radius 50%
				border 2px solid $secondary-color
				background-color transparent
				transition all .17s ease-in-out
				opacity 1
				outline none
				margin-bottom 30px
				&:last-child
					margin-bottom 0
				&:hover,
				&-active
					background-color $secondary-color
					
// Feedbacks slider
.feedbacks
	&__slider
		margin-bottom 50px
		
		.slider__pagination
			margin-top 35px
			
.feedback-slide
	&__text
		padding-top 75px
		background url('../img/icons/svg/reviews_quote.svg') top left no-repeat / 40px 30px
		font 18px $Italic
		line-height 1.9
		color $light-text-color
		margin-bottom 35px
		
	&__information
		color $light-text-color
		font-size 18px
					
			
			