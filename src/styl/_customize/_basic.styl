// ========== ========== G L O B A L   S T Y L E S ========== ==========
html
	text-size-adjust none
	box-sizing border-box
	&.is-fixed
		overflow hidden
	
*
	padding 0
	margin 0
	box-sizing inherit
	&:after,
	&:before
		box-sizing inherit


body
	font 16px $Reg
	line-height 1.45
	overflow-x hidden
	min-width 320px
	height 100%
	opacity 1
	position relative
	color $text-color
	background-color $body-bg

h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input,
textarea
	outline none
	background transparent
	border none
	box-shadow none
	transition all .17s ease-in-out
	&:focus
		outline none
		
textarea
	resize vertical
	width 100%
	
select
	appearance none
	-webkit-appearance none
	-moz-appearance none
	transition all .17s ease-in-out
	cursor pointer
	&:focus
		outline none

a
	text-decoration none
	outline none
	transition all .17s ease-in-out
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer
	transition all .17s ease-in-out
	background transparent
	&:focus
		outline none

img
	max-width 100%
	height auto
	
b, strong
	font-family $Bold
	

// ========== ========== ========== ========== ========== ==========

// ========== ========== M A I N   S T Y L E S ========== ==========

.disable-hover,
.disable-hover * 
	pointer-events none !important

.clearfix:before,
.clearfix:after
	content " "
	display table

.clearfix:after
	clear both

.gutters
	padding $gutters
.gutter
	&-top
		padding-top $gutter-top
	&-bottom
		padding-bottom $gutter-bottom
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%
	
.sect
	&__title
		font 42px $ExBold
		color $dark-secondary-color
		position relative
		margin-bottom 85px
		&--with-logo
			&:before
				pseudo()
				position absolute
				position-center()
				z-index -1
				width 100px
				height 80px
				background url('../img/title-logo.svg') 50% 50% no-repeat / contain
				pointer-events none
		


.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.light-color
	color $light-color

.dark-color
	color $dark-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.color-bg
	background-color $color-bg
	
.letter-spacing
	letter-spacing 0.1em
	
.border-radius
	border-radius 5px
	
.permalink-block
	margin-top 45px
	
.content
	color $content-text-color
	font-size 18px
	h2,h3,h4,h5,h6
		font-family $ExBold
		color $dark-secondary-color
		&:last-child
			margin-bottom 0
	h2
		font-size 42px
		margin-bottom 60px
			
	h3
		font-size 36px
		margin-bottom 50px
		
	h4
		font-size 30px
		margin-bottom 40px
		
	h5
		font-size 24px
		margin-bottom 30px
		
	h6
		font-size 18px
		margin-bottom 20px
			
	b, strong
		font-family $Bold
		
	i
		font-family $Italic
		
	img
		display block
		border-radius 10px
		margin 60px 0
		&:last-child
			margin-bottom 0
			
	a
		color $accent-color
		border-bottom 1px solid
		&:hover
			border-color transparent
		
		
	p
		margin-bottom 40px
		&:last-child
			margin-bottom 0
			
	iframe, video
		display block
		height 350px
		
	ul, ol
		margin-bottom 40px
		li
			position relative
			display block
			margin-bottom 15px
			&:last-child
				margin-bottom 0
		&:last-child
			margin-bottom 0
			
	ul
		li
			&:before
				pseudo()
				border-radius 50%
				width 6px
				height 6px
				background-color $dark-secondary-color
				vertical-align middle
				margin-right 10px
				transform translateY(-2px)
				
	ol
		counter-reset list
		li
			&:before
				counter-increment list
				content counter(list) ". "
				color $dark-secondary-color
				font-family $Med
				margin-right 5px
				
		

			
.f-f-medium
	font-family $Med
	

.page
	padding-top 50px	
	&-no-gutter
		padding-top 0
	.sect__seo
		padding-bottom 0
		
	&__header
		position relative
		padding 50px 0
		min-height 710px
		color $dark-secondary-color
		font-size 20px
		overflow hidden
		.sect__title
			margin-bottom 40px
			
		.btn
			margin-top 50px
		&--content
			position relative
			z-index 1
			&_block
				max-width 620px
				position relative
				&:before
					pseudo()
					position absolute
					top -135px
					left -300px
					background url('../img/backgrounds/overlay.png') no-repeat
					width 1075px
					height 626px
			
			
		.breadcrumbs
			position relative
			z-index 2
		
			
		

