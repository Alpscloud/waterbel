.container
	margin 0 auto
	width 100%
	max-width $container-width
	padding $container-gutters
	
.row
	display flex
	flex-wrap wrap
	&-nowrap
		flex-wrap nowrap
	&-gutters
		margin-left $row-gutter-left
		margin-right $row-gutter-right
		
.column
	display flex
	flex-direction column
	
.align
	&-horisontal
		&-start
			justify-content flex-start
		&-center
			justify-content center
		&-end
			justify-content flex-end
		&-between
			justify-content space-between
			
	&-vertical
		&-start
			align-items flex-start
		&-center
			align-items center
		&-end
			align-items flex-end
		&-baseline
			align-items baseline
		
	&-stretch
		align-items stretch
				
.width
	&-25
		width 25%
	&-20
		width 20%
	